<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.Pages.TaskAdd"
             Title="Nova Tarefa">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry Placeholder="Título" Text="{Binding Title}" />
        <Editor Placeholder="Descrição" HeightRequest="100" Text="{Binding Description}" />
        <Picker Title="Prioridade" SelectedIndex="{Binding Priority}">
            <Picker.Items>
                <x:String>Baixa</x:String>
                <x:String>Média</x:String>
                <x:String>Alta</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Salvar" Clicked="OnSaveClicked"/>
    </VerticalStackLayout>
</ContentPage>
