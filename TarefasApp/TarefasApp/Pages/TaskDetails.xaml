<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.Pages.TaskDetails"
             Title="Detalhes da Tarefa">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="{Binding Title}" FontSize="24" FontAttributes="Bold"/>
        <Label Text="{Binding Description}" FontSize="16"/>
        <Label Text="{Binding PriorityText}" TextColor="Red"/>
        <Label Text="{Binding CreatedAt, StringFormat='Criada em: {0:dd/MM/yyyy HH:mm}'}" FontSize="12" TextColor="Gray"/>
        <Button Text="Editar" Clicked="OnEditClicked"/>
        <Button Text="Excluir" Clicked="OnDeleteClicked" TextColor="Red"/>
    </VerticalStackLayout>
</ContentPage>
